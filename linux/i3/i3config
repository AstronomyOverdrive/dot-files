# Always exec commands
# Display settings, sometimes inconsistent so it's better to use a script
#exec_always --no-startup-id xrandr --output DP-2 --mode 1920x1080 --rate 144 --primary
#exec_always --no-startup-id xrandr --output HDMI-0 --mode 1920x1080 --rate 60 --left-of DP-2
# Pointer settings. To get device name/props, use: xinput list -> xinput list-props [DEVICE NAME]
exec_always --no-startup-id xinput set-prop 'Kingsis Peripherals ZOWIE Gaming mouse' 'libinput Accel Profile Enabled' 0 1 0
exec_always --no-startup-id xinput set-prop 'Kingsis Peripherals ZOWIE Gaming mouse' 'libinput Accel Speed' 0.000000
#exec_always --no-startup-id xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Tapping Enabled' 1
#exec_always --no-startup-id xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Natural Scrolling Enabled' 1
#exec_always --no-startup-id xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Disable While Typing Enabled' 0
# Keyboard layout + swap caps/esc keys
exec_always --no-startup-id setxkbmap se -option "caps:swapescape"
# Turn off mobo speaker
exec_always --no-startup-id xset b off

# Exec / startup commands
exec --no-startup-id xfce4-panel
exec --no-startup-id nm-applet
exec --no-startup-id flameshot
exec --no-startup-id parcellite
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
