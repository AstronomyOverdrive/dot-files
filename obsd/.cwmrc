color activeborder dodgerblue

unbind-key all
unbind-mouse all

sticky yes

gap 0 20 0 0

ignore sttsbar

autogroup 0 xterm,sttsbar

bind-key 4-d "dmenu_run -b -fn 'monospace:pixelsize=16' -nb '#000000' -sb dodgerblue -i"
#bind-key 4-f thunar
#bind-key 4-e geany
bind-key 4-p "flameshot gui"
bind-key 4-w firefox
bind-key 4-t "xterm -bg '#171717' -fg '#D3D7CF' +sb -fa 'Source Code Pro Medium' -fs 12 -xrm 'XTerm*selectToClipboard: true'"
bind-key 4-Return "xterm -bg '#171717' -fg '#D3D7CF' +sb -fa 'Source Code Pro Medium' -fs 12 -xrm 'XTerm*selectToClipboard: true'"

bind-key S4-p "shutdown -p now"
bind-key M4-p "shutdown -r now"

bind-key S4-f window-maximize
bind-key 4-h window-move-left-big
bind-key 4-j window-move-down-big
bind-key 4-k window-move-up-big
bind-key 4-l window-move-right-big
bind-key S4-h window-resize-left-big
bind-key S4-j window-resize-down-big
bind-key S4-k window-resize-up-big
bind-key S4-l window-resize-right-big

bind-key 4-Left window-move-left
bind-key 4-Down window-move-down
bind-key 4-Up window-move-up
bind-key 4-Right window-move-right
bind-key S4-Left window-resize-left
bind-key S4-Down window-resize-down
bind-key S4-Up window-resize-up
bind-key S4-Right window-resize-right

bind-key S4-q window-close
bind-key M-Tab window-cycle-ingroup
bind-key MS-Tab window-rcycle-ingroup

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9
bind-key S4-1 window-movetogroup-1
bind-key S4-2 window-movetogroup-2
bind-key S4-3 window-movetogroup-3
bind-key S4-4 window-movetogroup-4
bind-key S4-5 window-movetogroup-5
bind-key S4-6 window-movetogroup-6
bind-key S4-7 window-movetogroup-7
bind-key S4-8 window-movetogroup-8
bind-key S4-9 window-movetogroup-9

bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize

bind-key S4-r restart
bind-key M4-q quit
bind-key M4-l lock

